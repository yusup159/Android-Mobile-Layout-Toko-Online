<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:paddingTop="350dp"
        android:src="@drawable/img_login_1"
        android:contentDescription="TODO" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/img_login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="40sp"/>

    <EditText
        android:id="@+id/idUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/bg_login"
        android:gravity="center"
        android:hint="@string/masukkan_username"
        android:paddingTop="7dp"
        android:paddingBottom="7dp" />

    <EditText
        android:id="@+id/idPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_login"
        android:layout_marginTop="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:hint="@string/masukkan_password"
        android:layout_below="@+id/idUser"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_login"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:text="@string/login"
        android:layout_below="@+id/idPass"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_your_password"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:layout_below="@+id/btn_login"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="510dp"
        android:gravity="center"
        android:text="@string/or_conect_with"
        android:textSize="13.5sp" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="556dp"
        android:layout_marginRight="235dp"
        android:background="@drawable/bg_login"
        android:text="@string/google" />

    <Button
        android:id="@+id/btn_facebook"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="556dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_login"
        android:text="@string/facebook" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/don_t_have_account"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="110dp"
        android:textSize="13sp"
        android:layout_below="@+id/btn_facebook"
        />
    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="@string/sign_up"
        android:textColor="@color/blue"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="215dp"
        android:layout_marginRight="100dp"
        android:background="#00000000"
        android:layout_below="@+id/btn_facebook"
        />

</RelativeLayout>