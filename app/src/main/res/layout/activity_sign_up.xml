<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="351dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:paddingTop="97dp"
        android:src="@drawable/img_login_3" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/img_login_2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:text="@string/registrasi"
        android:textColor="@color/white"
        android:textSize="63sp" />

    <EditText
        android:id="@+id/idUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_login"
        android:hint="Masukan Nama Lengkap"
        android:paddingTop="13dp"
        android:paddingBottom="13dp" />

    <EditText
        android:id="@+id/idPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idUser"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="27dp"
        android:paddingLeft="15dp"
        android:background="@drawable/bg_login"
        android:hint="Masukan Email"
        android:paddingTop="13dp"
        android:paddingBottom="13dp" />

    <EditText
        android:id="@+id/idPass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idPass"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/bg_login"
        android:hint="Password"
        android:paddingTop="13dp"
        android:paddingBottom="13dp" />

    <EditText
        android:id="@+id/idPass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idPass1"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="27dp"
        android:paddingLeft="15dp"
        android:background="@drawable/bg_login"
        android:hint="Ulangi Password"
        android:paddingTop="13dp"
        android:paddingBottom="13dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/idPass2"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/bg_login"
        android:text="@string/login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:text="@string/or_regist_with"
        android:textSize="13.5sp" />

    <Button
        android:id="@+id/btn_google_signup"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="647dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="235dp"
        android:background="@drawable/bg_login"
        android:text="@string/google" />

    <Button
        android:id="@+id/btn_facebook_signup"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="647dp"
        android:layout_marginLeft="235dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_login"
        android:text="@string/facebook" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="15dp"
        android:src="@drawable/btn_back"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</RelativeLayout>